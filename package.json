{
  "name": "pink",
  "version": "14.0.0",
  "private": true,
  "description": "Личный проект «Пинк» от HTML Academy",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/scss/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "start": "gulp default",
    "build": "gulp style"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.1.0",
    "node-sass": "^4.14.1",
    "stylelint": "^10.1.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "src/**/*.html",
    "src/js/**/*.js",
    "src/img/**/*.svg",
    "src/scss/**/*.scss"
  ],
  "dependencies": {
    "npm": "^6.13.6"
  }
}
